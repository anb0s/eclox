<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

     <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Doxygen"
            class="eclox.ui.PreferencePage"
            id="eclox.ui.PreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Doxygen Build Log"
            icon="icons/file.gif"
            class="eclox.ui.view.BuildLogView"
            id="eclox.ui.views.buildLog">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            filenames="doxyfile"
            class="eclox.ui.editor.form.Editor"
            icon="icons/file.gif"
            name="Form Doxyfile Editor"
            id="eclox.ui.editor.form.Editor"
            extensions="doxyfile"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            class="eclox.ui.wizard.NewDoxyfileWizard"
            icon="icons/new.gif"
            project="false"
            name="Doxygen Configuration"
            id="eclox.ui.DoxyfileCreationWizard">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="Doxygen"
            description="Doxygen Action Set"
            visible="true"
            id="eclox.actionSets.default">
         <menu
               label="Run"
               path="additions"
               id="org.eclipse.ui.run">
            <separator
                  name="doxygen">
            </separator>
         </menu>
         <menu
               label="Doxygen"
               path="org.eclipse.ui.run/doxygen"
               id="eclox.ui.menu.doxygen">
         </menu>
         <action
               label="Stop"
               icon="icons/stop.gif"
               retarget="true"
               menubarPath="org.eclipse.ui.run/eclox.ui.menu.doxygen/additions"
               id="eclox.ui.action.stop">
         </action>
         <action
               label="Build"
               style="pulldown"
               icon="icons/build.gif"
               class="eclox.ui.action.BuildActionDelegate"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/debug"
               id="eclox.ui.action.build">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*doxyfile*"
            id="eclox.ui.doxyfilepopup">
         <action
               label="Build"
               icon="icons/build.gif"
               class="eclox.ui.action.BuildPopupActionDelegate"
               id="eclox.ui.action.build">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            file-extensions="Doxyfile, doxyfile"
            file-names="Doxyfile, doxyfile, *"
            id="doxyfile"
            name="Doxygen Configuration"
            priority="normal"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="eclox.preferences.Initializer"/>
   </extension>

</plugin>
